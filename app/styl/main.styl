@font-face
    font-family 'Graphik'
    src url('../fonts/graphik.ttf') format('truetype')

@font-face
    font-family 'Roboto'
    src url('../fonts/roboto.ttf') format('truetype')

body
    margin 0
    background-color rgb(241, 241, 241)

h1, h2, a
    font-family: Graphik

body > section > div
    margin: 0 1vw

.navigation-container
    display: flex
    flex-direction: column
    margin: 0
    margin-bottom: 2%

.navigation-container > div
    display: flex
    background-color: #141414
    padding: 2vh 2vw

.navigation-container > div:nth-child(1)
    padding: 0

.navigation-container > div:nth-child(1) > div
    margin: 2vh 2vw

.navigation-container > div:nth-child(1) > div:nth-child(1)
    flex-basis: 13%

    @media (max-width: 1000px)
        display: none

.navigation-container > div:nth-child(1) > div:nth-child(2)
    display: flex
    justify-content: center
    gap: 4vw
    flex-basis: 70%
    align-items: center

    @media (max-width: 1000px)
        flex-basis: 100%
        flex-wrap: wrap


.navigation-container a
    text-decoration: none
    font-size: 1.15em
    color: hsla(0, 0%, 100%, .415)
    transition: color 0.5s

.navigation-container a:hover
    color: white

.navigation-container > div:nth-child(2) > div:nth-child(2) > a:nth-child(1)
    top: calc(20% + 10px)
    background: black
    color: hsla(0, 0%, 100%, .815)
    position: relative
    height: 120%
    padding: 10px

    @media (max-width: 1000px) 
        top: 0
        background: transparent
        color: hsla(0, 0%, 100%, .815)
        height: auto
        padding: 0

.navigation-container > div:nth-child(2) > a:nth-child(1)
    color: white

.navigation-container a.navigation-title
    font-family: Roboto
    font-size: 2.5em
    color: white

.films-container
    display: flex

.films-container > div
    display: flex

    @media (max-width: 1000px) 
        flex-direction: column
        flex-grow: 1
        

.films-container > div > a
    width: 24.23vw
    aspect-ratio: 5/8

.films-container > div > a > img
    width: 100%
    height: 100%

.articles-container
    display: flex
    margin-bottom: 1vh
    align-items: flex-start

    @media (max-width: 1000px) 
        flex-direction: column
        flex-grow: 1

.articles-container > .most-profitable-container
    display: inline-block
    width: 65vw

.articles-container > .news
    display: inline-block
    vertical-align: top
    width: 30vw

.articles-container > .most-profitable-container > h1
    font-size: 3em;
    margin-bottom: 4vh;

.articles-container > .most-profitable-container > div
    display: flex

.articles-container > .most-profitable-container > div > div
    display: flex
    flex-direction: column;
    vertical-align: top
    width: 20vw

.articles-container > .most-profitable-container > div > div > img 
    width: 10vw
    aspect-ratio: 7/10

.articles-container > .most-profitable-container > div > div > h2
    margin-bottom: 0.6vh
    font-size: 1.4em

.articles-container > .most-profitable-container > div > div > p
    font-family: Calibri
    font-size: 1em
    color: gray
    margin-top: 0
    width: 80%

.most-profitable-container
    width: 40%

    @media (max-width: 1000px) 
        width: 100% !important

.most-profitable-container > div
    @media (max-width: 1000px) 
        width: 100% !important
        flex-direction: column;
        gap: 2vh

.most-profitable-container > div > div
    @media (max-width: 1000px) 
        width: 100% !important

.most-profitable-container img
    width: 400px
    @media (max-width: 1000px) 
        width: 100% !important

.news
    width: 40%
    display: flex
    flex-direction: column
    align-items: center

    @media (max-width: 1000px) 
        width: 100% !important

.news > h1
    font-size: 3em
    margin-bottom: 4vh

.news > div
    display: flex
    flex-direction: column
    gap: 5vh
    align-items: center
    margin-bottom: 2vh

.news > div > div
    display: flex
    flex-direction: row
    gap: 1vw
    justify-content: center

.news > div > div > div:nth-child(1)
    display: flex
    flex-direction: column
    width: 56%

.news > div > div > div:nth-child(1)
    flex-basis: 84%

.news > div > div > div:nth-child(2)
    flex-basis: 16%

.news > div > div > div:nth-child(2) > img
    width: 154px

.news > div > div > div > h2
    margin: 0

.news > div > div > div > p
    margin-top: 0
    font-family: Calibri
    font-size: 1.2em

.footer-container
    display: flex
    background-color: #141414
    margin: 0
    padding: 2vh 1vw
    justify-content: space-between

.footer-container > div > p
    font-family: Calibri
    color: hsla(0, 0%, 100%, .6)

.films-container a
    @media (max-width: 1000px)
        aspect-ratio: auto !important
        width: 100% !important

.films-container img
    transition: transform 0.5s

.films-container img:hover 
    transform: scale(1.1)

.navigation-container > div:nth-child(2) > div:nth-child(2) > a
    @media (max-width: 1000px)
        display: flex
        flex-basis: 47%
        justify-content: center

.film-info
    background: white
    width: 54%;
    margin: auto;
    padding: 2vw 2vw
    display: flex
    gap: 2vw

.film-info > div:nth-child(2)
    display: flex
    flex-direction: column

.film-info p
    font-family: Calibri
    margin-top: 0.6vh
    color: grey

.film-info li
    font-family: Calibri
    margin-bottom: 0.3vh

.film-info h1 img
    margin-left: 1vw

.film-info h3
    font-family: Graphik
    margin-bottom: 0

.film-info ul
    padding: 0
    margin-top: 0.6vh
    color: grey

.film-info > div:nth-child(1) > img
    width: 300px
    height: 450px
    align: left

.my-list
    margin-top: 2vh
    border: 0
    border-collapse: collapse;

.my-list th
    padding: 2.2vh 2vw
    font-family: Calibri
    font-size: 1.2em
    border: 0
    border-bottom: 1px solid #a0a0a0
    text-transform: uppercase
    text-align: left

.my-list td
    padding: 1.8vh 2vw
    color: rgb(130, 130, 130)
    font-family: Graphik
    font-size: 0.92em
    border: 0
    border-bottom: 1px solid #a0a0a0;

details > summary
    font-family: Calibri
    font-weight: 1000
    font-size: 1.2em
    margin-left: 0.5vw
    text-transform: uppercase

.green-text
    color: rgb(0, 154, 0) !important

.red-text
    color: red !important


